<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/namaprofile"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:text="nama profile" />

            <TextView
                android:id="@+id/poin"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:gravity="center"
                android:text="poin user" />

            <TextView
                android:id="@+id/usertertinggi"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:gravity="center"
                android:lineSpacingExtra="10sp"
                android:text="USER TERTINGGI :" />

            <TextView
                android:id="@+id/tertinggi1"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:gravity="center"
                android:text="peringkat 1 = veteran" />

            <TextView
                android:id="@+id/tertinggi2"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:gravity="center"
                android:text="peringkat 2 = senior" />

            <TextView
                android:id="@+id/tertinggi3"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:gravity="center"
                android:text="peringkat 3 = junior" />

            <TextView
                android:id="@+id/tertinggi4"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:gravity="center"
                android:text="peringkat 4 = newbie" />



        </LinearLayout>


</LinearLayout>
